{% block ads%}
	 <p class="col-md-2" ><a href="{{path('fos_user_profile_show')}}" title="Lien 1">Profil</a></p>
	{% block fos_user_content %}                    
		<div class="container">
			<div class="row"> 
				{% if factures|length ==0 %}
						<tr>
		        			<td colspan="4"><center>Vous n'avez pas de factures</center></td>
		        		</tr>
	        	{% else %}
					<table class="table table-striped table-hover">  
							<thead>
								<tr>
									<th>date</th>
									<th>Référence</th>
									<th>Quantité</th>
									<th>Prix</th>
								</tr>
							</thead>
							<tbody>        
					        	{% for facture in factures %}
					        		<tr>
					        			 <td class="text-left">{{ facture.date|date('d/m/Y') }}</td>
					        			 <td class="text-left"></td>
					        		</tr>
				        		{% endfor %}

		        	</table>
		        {% endif %}
			</div>
		</div>
	{% endblock fos_user_content %}
	{% include '::footer.html.twig' %}   
{% endblock ads%}
