{% extends "@FOSUser/layout1.html.twig" %}
{% set compteur = 1 %}
{% block fos_user_content %}
	{% include '::menu.html.twig' %}
	
	<p class="col-md-2" ><a href="{{path('fos_user_profile_show')}}" title="Lien 1">Profil</a></p>
	<div class="container">
		<div class="row">
            	{% for adresse in adresses %}
            <table class="table table-striped table-bordered" style="border: 15px solid grey; border-spacing:10px;">
                <tbody>
            		<p style="text-align:center;">adresse postale numero {{compteur}} </p>
                	 <tr scope="row"  style=" border:1px solid grey; text-align:center;">
                	 	<th style="text-align:center;"> nom</th>
            		 	<td style="text-align:center;">{{ adresse.nom }}</td>
            		</tr>
            		<tr>
                	 	<th style="text-align:center;">prénom</th>
            		 	<td style="text-align:center;">{{ adresse.prenom }}</td>
            		</tr>
            		<tr>
                	 	<th style="text-align:center;">téléphone</th>
            		 	<td style="text-align:center;">{{ adresse.telephone }}</td>
                	</tr>
                	<tr>
                	 	<th style="text-align:center;">rue</th>
            		 	<td style="text-align:center;">{{ adresse.rue}}</td>
                	</tr>
                	<tr> 	
                	 	<th style="text-align:center;">complement</th>
            		 	<td style="text-align:center;">{{ adresse.complement}}</td>
            		</tr>
            		<tr>
                	 	<th style="text-align:center;">ville</th>
            		 	<td style="text-align:center;">{{ adresse.ville }}</td>
            		 </tr>
            		 <tr>
                	 	<th style="text-align:center;">code postal</th>
            		 	<td>{{ adresse.codepostal }}</td>
                	 </tr>
                	 <tr>
                	 	<td>
	                	 	<ul>
	                	 		<li>
	                	 			<a href="{{path('multi_service_gsm_user_edit_adresse',{'id':adresse.id }) }}">Modifier cette adresse postale</a>
	                	 		</li>
	                	 		 <li 
                            onClick="return confirm('etes vous sur(e) de vouloir supprimer ?')">
                            <a href="{{ path('multi_service_gsm_user_delete_adresse', { 'id': adresse.id }) }}">Supprimer cette adresse postale</a>
                        </li>
	                	 	</ul>
	                	</td>
                	 </tr>
                	 <HR align=center size=8 width="50%">
                	 {% set compteur = compteur + 1 %}
                </tbody>
            </table>
            	{% endfor %}
            
        </div>  
     </div>
	{% include '::footer.html.twig' %}
{% endblock fos_user_content %}

