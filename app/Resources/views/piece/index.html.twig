{% extends 'base.html.twig' %}

{% block body %}
     {% include '::menuAction.html.twig' %} 
    <h1 style="text-align:center;">liste des pièces détachées </h1>
    <br>
     <ul style="text-align:center;">
        <p>
            <a href="{{ path('piece_new') }}">Ajouter une nouvelle pièce</a>
        </p>
    </ul>   

    <table  class="table table-striped table-bordered" style="border: 15px solid grey; border-spacing:10px;">>
        <thead>
            <tr style="text-align:center;">
                <th style="text-align:center;">Id</th>
                <th style="text-align:center;">Nompiece</th>
                <th style="text-align:center;">Prix</th>
                <th style="text-align:center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr style="text-align:center;">
                <td><a href="{{ path('piece_show', { 'id': piece.id }) }}">{{ piece.id }}</a></td>
                <td>{{ piece.nomPiece }}</td>
                <td>{{ piece.prix }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('piece_show', { 'id': piece.id }) }}">Afficher cette pièce détachée</a>
                        </li>
                        <li>
                            <a href="{{ path('piece_edit', { 'id': piece.id }) }}">Modifier cette pièce détachée</a>
                        </li>
                        <li 
                            onClick="return confirm('etes vous sur(e) de vouloir supprimer ?')">
                            <a href="{{ path('piece_supprimIndiv', { 'id': piece.id }) }}">Supprimer cette pièce détachée</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('piece_new') }}">Ajouter une nouvelle pièce</a>
        </li>
    </ul>
{% endblock %}
