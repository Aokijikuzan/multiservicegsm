{% extends 'base.html.twig' %}

{% block body %}
     {% include '::menuAction.html.twig' %} 
     <h1 style="text-align:center;">Afficher une marque</h1>
    <div class="container">
        <div class="row">


    <table class="table table-striped table-bordered" style="border: 15px solid grey; border-spacing:10px;">
        <tbody>
            <tr scope="row"  style=" border:1px solid grey; text-align:center;">
                <th style="text-align:center;">Id</th>
                <td style="text-align:center;">{{ marque.id }}</td>
            </tr>
            <tr scope="row"  style=" border:1px solid grey; ">
                <th style="text-align:center;">Nommarque</th>
                <td style="text-align:center;">{{ marque.nomMarque }}</td>
            </tr>
        </tbody>
    </table>

    <ul scope="row"  style=" border:1px solid grey; text-align:center;">
        <li>
            <a href="{{ path('marque_index') }}">Revenir sur la liste</a>
        </li>
        <li>
            <a href="{{ path('marque_edit', { 'id': marque.id }) }}">Modifier une marque</a>
        </li>
        <li style="text-align:center;">
            <a href="{{ path('marque_new') }}" >ajouter une nouvelle marque</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
