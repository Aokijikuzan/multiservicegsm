{% extends 'base.html.twig' %}

{% block body %}
    {% include '::menuAction.html.twig' %} 
    <h1 style="text-align:center;">Liste de marques</h1>

    <ul >
        <li style="text-align:center;">
            <a href="{{ path('marque_new') }}">Ajouter une nouvelle  marque</a>
        </li>
    </ul>
    <table class="table table-striped table-bordered" style="border: 15px solid grey; border-spacing:10px;">
        <thead>
            <tr style="text-align:center;">
                <th style="text-align:center;">Id</th>
                <th style="text-align:center;">Nommarque</th>
                <th style="text-align:center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr style="text-align:center;">

                <td><a href="{{ path('marque_show', { 'id': marque.id }) }}">{{ marque.id }}</a></td>
                <td>{{ marque.nomMarque }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('marque_show', { 'id': marque.id }) }}">Afficher cette marque</a>
                        </li>
                        <li>
                            <a href="{{ path('marque_edit', { 'id': marque.id }) }}">Modifier cette marque</a>
                        </li>
                        <li 
                            onClick="return confirm('etes vous sur(e) de vouloir supprimer ?')">
                            <a href="{{ path('multi_service_gsm_front_suppression_marque', { 'id': marque.id }) }}">Supprimer cette marque</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul >
        <li style="text-align:center;">
            <a href="{{ path('marque_new') }}">Ajouter une nouvelle  marque</a>
        </li>
    </ul>
{% endblock %}
